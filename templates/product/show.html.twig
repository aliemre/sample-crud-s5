{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Quantity Available</th>
                <td>{{ product.quantityAvailable }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description|raw }}</td>
            </tr>
            <tr>
                <th>Tags</th>
                <td>
                    {% for tag in product.tags %}
                        {{ tag.name }} {% if loop.last == false %}-{% endif %}
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    {{ include('product/_delete_form.html.twig') }}

    <hr>

    <a class="btn btn-info" href="{{ path('product_index') }}">back to list</a>
    <a class="btn btn-warning" href="{{ path('product_edit', {'id': product.id}) }}">edit</a>
{% endblock %}
